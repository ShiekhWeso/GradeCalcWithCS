<Window x:Class="GradeCalcWithCS.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GPA Calculator" Height="450" Width="400">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="GPA Calculator Menu" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <Button Content="View All Students" Click="ViewAll_Click" Margin="0,5"/>
        <Button Content="View Your Details" Click="ViewDetails_Click" Margin="0,5"/>
        <Button Content="Add New Student" Click="AddStudent_Click" Margin="0,5"/>
        <Button Content="Edit Student" Click="EditStudent_Click" Margin="0,5"/>
        <Button Content="Delete Student" Click="DeleteStudent_Click" Margin="0,5"/>
        <Button Content="Exit" Click="Exit_Click" Margin="0,5"/>
    </StackPanel>
</Window>