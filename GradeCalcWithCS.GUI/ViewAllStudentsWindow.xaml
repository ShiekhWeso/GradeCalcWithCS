<Window x:Class="GradeCalcWithCS.GUI.ViewAllStudentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="All Students" Height="400" Width="600">
    <Grid Margin="10">
        <DataGrid x:Name="StudentsGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="GPA" Binding="{Binding GPA}" Width="100"/>
                <DataGridTextColumn Header="Percentage" Binding="{Binding TotalPercentage}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>