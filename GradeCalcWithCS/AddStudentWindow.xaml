<Window x:Class="GradeCalcWithCS.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeCalcWithCS"
        mc:Ignorable="d"
        Title="AddStudentWindow" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Add New Student" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Student Name:"/>
            <TextBox Name="NameInput" Margin="0,5" Background="#FFCCCCCC" Foreground="Black" FontWeight="SemiBold"/>

            <TextBlock Text="Number of Subjects:" />
            <TextBox Name="SubjectCountInput" Margin="0,5" Background="#FFCCCCCC" Foreground="Black" FontWeight="SemiBold"/>

            <Button Content="Generate Subject Fields" Click="GenerateFields_Click" Margin="0,10" Background="#FF4CAF50" Foreground="White"/>

            <StackPanel Name="SubjectFieldsPanel" Margin="0,10"/>

            <Button Content="Save Student" Click="SaveStudent_Click" Margin="0,10" Background="#FF2196F3" Foreground="White"/>
        </StackPanel>
    </ScrollViewer>

</Window>
