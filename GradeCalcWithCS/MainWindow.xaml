<Window x:Class="GradeCalcWithCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeCalcWithCS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="353" Width="468" Margin="0,71,0,0">
            <TextBlock Text="Student Grade Manager" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"
           TextAlignment="Center" HorizontalAlignment="Center"/>
            <Button Content="View All Students" Click="ViewAll_Click" Margin="0,5" Height="25"/>
            <Button Content="Add Student" Click="AddStudent_Click" Margin="0,5" Height="25"/>
            <Button Content="Search by Name" Click="SearchStudent_Click" Margin="0,5" Height="25"/>
            <Button Content="Edit Student" Click="EditStudent_Click" Margin="0,5" Height="25"/>
            <Button Content="Delete Student" Click="DeleteStudent_Click" Margin="0,5" Height="25"/>
            <Button Content="Exit" Click="Exit_Click" Margin="20,10,20,0" Background="red" Foreground="White" Width="192" Height="32"/>
        </StackPanel>
    </Grid>
</Window>
