<Window x:Class="GradeCalcWithCS.EditStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeCalcWithCS"
        mc:Ignorable="d"
        Title="EditStudentWindow" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Edit Student" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBox Name="SearchInput" Margin="0,0,0,10" Background="#FFCCCCCC" Foreground="Black" FontWeight="SemiBold" ToolTip="Enter student name to edit"/>

            <Button Content="Load Student" Click="LoadStudent_Click" Width="120" Background="#FF2196F3" Foreground="White"/>

            <StackPanel Name="EditPanel" Margin="0,20,0,0"/>

            <Button Content="Save Changes" Click="SaveChanges_Click" Width="120" Background="#FF4CAF50" Foreground="White" Margin="0,20,0,0"/>
        </StackPanel>
    </ScrollViewer>

</Window>
